listen_addresses = '*'
port ={{DB_PORT}}
log_destination = 'stderr'
logging_collector = on
log_directory = '/var/log/postgresql/'
log_filename = 'postgresql.log'
log_file_mode = 0644
archive_mode = on
archive_command = 'cp %p {{archive_dir}}/%f'
max_wal_senders = 10
wal_level = replica
wal_log_hints = on
log_replication_commands = on
